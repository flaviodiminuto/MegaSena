<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bordas_arredondadas"
    tools:context=".View.CardSequencia"
    android:layout_marginTop="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/sequencias_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginVertical="10dp"
        android:background="@drawable/bordas_arredondadas">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/txt_sequencia_identificador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sequencia: xx"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:id="@+id/layout_horizontal_sequencias"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:id="@+id/txt_sequencia_valor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="valor: R$"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>