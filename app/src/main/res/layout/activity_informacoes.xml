<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="10dp"
    tools:context=".Modelos.View.Informacoes">

    <TextView
        android:id="@+id/txtInformTitulo"
        android:layout_width="247dp"
        android:layout_height="72dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Informações sobre a Mega Sena"
        android:textColor="@color/texto_cor"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/btnInformaReturn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnInformaReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_white_18dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtInformTitulo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtInformComoJogar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Como jogar"
                android:textColor="@color/texto_cor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quanto maior for a quantidade de números apostados em um único jogo, maior será o valor da aposta. Confira os valores na relação a seguir:"
                android:textColor="@color/texto_cor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="Para concorrer ao prêmio da Mega Sena você precisa realizar uma aposta de 6 a 15 números de 1 a 60 em uma lotérica ou através da loteria online no site da Caixa Lotérica.

Além da aposta convencional há também as modalidades Supresinha, Teimosinha e Bolão que não têm sua dinâmica comtemplada neste aplicativo, no momento."
                android:textColor="@color/texto_cor"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txtInformQuantidadePreco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quantidade de números e Preços"
                android:textColor="@color/texto_cor"
                android:textSize="18sp" />


