<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="10dp"
    tools:context=".Modelos.View.ApostaCarregada">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="#394A4A"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtApostaCarregadaTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aposta xx"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/texto_cor" />

            <TextView
                android:id="@+id/txtApostaCarregadaConteudo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:text="Jogo xx XX XX XX XX XX XX\n\nJogo xx XX XX XX XX XX XX\n\nJogo xx XX XX XX XX XX XX\n\nJogo xx XX XX XX XX XX XX\n\nJogo xx XX XX XX XX XX XX\n\nJogo xx XX XX XX XX XX XX\n\nJogo xx XX XX XX XX XX XX\n\nJogo xx XX XX XX XX XX XX\n\n"
                android:textColor="@color/texto_cor" />

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/btnApostaCarregadaSalvar"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/btn_salvar_branco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Salvar Aposta"
        android:textColor="@color/texto_cor"
        app:layout_constraintBottom_toTopOf="@+id/btnApostaCarregadaSalvar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/btnGeradaReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/scrollView4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/scrollView4"
        app:layout_constraintTop_toTopOf="@+id/scrollView4"
        app:srcCompat="@drawable/baseline_arrow_back_white_18dp" />

    <ImageView
        android:id="@+id/btnGeradaHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnGeradaReturn"
        app:layout_constraintEnd_toStartOf="@+id/btnGeradaReturn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/scrollView4"
        app:layout_constraintTop_toTopOf="@+id/btnGeradaReturn"
        app:srcCompat="@drawable/baseline_home_white_18dp" />

</android.support.constraint.ConstraintLayout>